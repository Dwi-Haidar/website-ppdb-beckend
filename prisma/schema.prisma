// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  Ispaid    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([username])
}

model Ppdb {
  id             Int      @id @default(autoincrement())
  nama           String?
  userId         Int?
  nisn           String?  @unique
  ttl            String?
  nik            String?  @unique
  email          String?  @unique
  noKK           String?  @unique
  alamat         String?
  namaAyah       String?
  tahunLahirAyah String?
  pendidikanAyah String?
  pekerjaanAyah  String?
  tahunLahirIbu  String?
  pendidikanIbu  String?
  pekerjaanIbu   String?
  alamatOrtu     String?
  noTelp         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  isPaid         Boolean  @default(false)
  image          Image[]
  fotoMurid      String?
  fotoKK         String?
  fotoIjazah     String?
  fotoAkta       String?
  fotoBukti      String?

  Kelulusan Kelulusan?
  Order     Order[]
}

model Image {
  id     Int    @id @default(autoincrement())
  url    String
  ppdbId Int
  ppdb   Ppdb   @relation(fields: [ppdbId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kelulusan {
  id              Int     @id @default(autoincrement())
  statusKelulusan Boolean @default(false)
  ppdbId          Int     @unique
  ppdb            Ppdb    @relation(fields: [ppdbId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id            Int      @id @default(autoincrement())
  orderId       String   @unique
  paymentMethod String
  price         Float
  ppdbId        Int
  ppdb          Ppdb     @relation(fields: [ppdbId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model EktraKulikuler {
  id        Int     @id @default(autoincrement())
  name      String?
  fotoEktra String
  Article   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Galeri {
  id         Int      @id @default(autoincrement())
  name       String?
  fotoGaleri String
  Article    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Berita {
  id         Int      @id @default(autoincrement())
  name       String
  fotoBerita String
  Article    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
